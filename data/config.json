{
  "app": {
    "name": "ModHub Central",
    "version": "0.1.0",
    "theme": "dark",
    "autoLaunch": true,
    "minimizeToTray": true,
    "checkForUpdates": true,
    "language": "fr"
  },
  "processing": {
    "pollingInterval": 1000,
    "resourceLimits": {
      "cpuUsageLimit": 5,
      "memoryLimit": 150
    },
    "loggingLevel": "info"
  },
  "mods": {
    "gaming": {
      "enabled": true,
      "priority": 100,
      "autoActivate": true,
      "processes": [
        "steam.exe",
        "EpicGamesLauncher.exe",
        "battle.net.exe"
      ],
      "games": [
        {
          "name": "Counter-Strike 2",
          "processName": "cs2.exe",
          "settings": {
            "dpi": 800,
            "pollingRate": 1000,
            "rgbProfile": "fps_profile"
          }
        },
        {
          "name": "Cyberpunk 2077",
          "processName": "Cyberpunk2077.exe",
          "settings": {
            "dpi": 1200,
            "pollingRate": 500,
            "rgbProfile": "cyberpunk_profile"
          }
        }
      ]
    },
    "night": {
      "enabled": true,
      "priority": 50,
      "autoActivate": true,
      "schedule": {
        "start": "22:00",
        "end": "07:00"
      },
      "settings": {
        "blueLight": 80,
        "brightness": 40,
        "rgbProfile": "night_profile",
        "inactivityThreshold": 20
      }
    },
    "media": {
      "enabled": true,
      "priority": 75,
      "autoActivate": true,
      "processes": [
        "vlc.exe",
        "spotify.exe",
        "netflix.exe",
        "chrome.exe",
        "firefox.exe"
      ],
      "settings": {
        "equalizer": "movie_preset",
        "ambientLighting": true,
        "rgbProfile": "media_profile",
        "volumeBoost": 110
      },
      "mediaApps": [
        {
          "name": "Netflix",
          "processName": "netflix.exe",
          "browserPattern": "netflix.com",
          "settings": {
            "equalizer": "movie_preset",
            "rgbProfile": "netflix_colors"
          }
        },
        {
          "name": "Spotify",
          "processName": "spotify.exe",
          "settings": {
            "equalizer": "music_preset",
            "rgbProfile": "spotify_reactive"
          }
        }
      ]
    },
    "focus": {
      "enabled": true,
      "priority": 80,
      "autoActivate": false,
      "processes": [
        "code.exe",
        "devenv.exe",
        "pycharm64.exe",
        "word.exe",
        "excel.exe",
        "powerpoint.exe"
      ],
      "settings": {
        "notifications": false,
        "rgbProfile": "focus_profile",
        "brightness": 70,
        "ambientSounds": "rain"
      }
    }
  },
  "devices": {
    "rgb": {
      "keyboard": {
        "enabled": true,
        "brand": "corsair",
        "model": "K70 RGB",
        "profiles": {
          "default": {
            "brightness": 70,
            "effect": "static",
            "color": "#00AAFF"
          },
          "fps_profile": {
            "brightness": 100,
            "effect": "static",
            "color": "#FF0000"
          },
          "cyberpunk_profile": {
            "brightness": 100,
            "effect": "wave",
            "colors": ["#FFC300", "#FF00FF", "#00FFFF"]
          },
          "night_profile": {
            "brightness": 20,
            "effect": "static",
            "color": "#550000"
          },
          "media_profile": {
            "brightness": 70,
            "effect": "audioVisualize",
            "colors": ["#0000FF", "#00FFFF", "#FFFFFF"]
          },
          "focus_profile": {
            "brightness": 40,
            "effect": "breathing",
            "color": "#0088FF"
          }
        }
      },
      "mouse": {
        "enabled": true,
        "brand": "logitech",
        "model": "G502",
        "dpiProfiles": {
          "default": 1200,
          "fps": 800,
          "moba": 1600,
          "browsing": 1000
        }
      },
      "strips": {
        "enabled": true,
        "brand": "phillips",
        "model": "Hue Play",
        "profiles": {
          "default": {
            "brightness": 70,
            "effect": "static",
            "color": "#00AAFF"
          },
          "movie": {
            "brightness": 40,
            "effect": "ambient",
            "adaptiveMode": true
          },
          "night": {
            "brightness": 20,
            "effect": "static",
            "color": "#FF2200"
          }
        }
      }
    },
    "audio": {
      "defaultDevice": "speakers",
      "devices": [
        {
          "name": "speakers",
          "id": "default",
          "type": "output",
          "default": true,
          "equalizer": {
            "movie_preset": [5, 3, 2, 0, 0, 1, 2, 3, 4, 5],
            "music_preset": [4, 3, 2, 0, -2, -2, 0, 2, 3, 4],
            "gaming_preset": [6, 4, 2, 0, 0, 0, 2, 4, 6, 8]
          }
        },
        {
          "name": "headphones",
          "id": "headset",
          "type": "output",
          "default": false,
          "equalizer": {
            "movie_preset": [5, 3, 2, 0, 0, 1, 2, 3, 4, 5],
            "music_preset": [4, 3, 2, 0, -2, -2, 0, 2, 3, 4],
            "gaming_preset": [6, 4, 2, 0, 0, 0, 2, 4, 6, 8]
          }
        }
      ]
    },
    "display": {
      "primary": {
        "name": "DELL S2722QC",
        "brightness": {
          "default": 70,
          "night": 40,
          "gaming": 90,
          "movie": 60
        },
        "blueLight": {
          "default": 0,
          "night": 70,
          "reading": 50
        }
      }
    }
  },
  "rules": [
    {
      "id": "game_detected",
      "name": "Jeu détecté",
      "condition": {
        "type": "process",
        "operator": "exists",
        "values": ["cs2.exe", "Cyberpunk2077.exe", "valorant.exe", "overwatch.exe"]
      },
      "actions": [
        {
          "type": "activateMod",
          "value": "gaming"
        },
        {
          "type": "setAudio",
          "device": "headphones",
          "equalizer": "gaming_preset"
        }
      ],
      "priority": 100,
      "enabled": true
    },
    {
      "id": "night_time",
      "name": "Mode nuit",
      "condition": {
        "type": "timeRange",
        "operator": "between",
        "start": "22:00",
        "end": "07:00"
      },
      "actions": [
        {
          "type": "activateMod",
          "value": "night"
        }
      ],
      "priority": 50,
      "enabled": true
    },
    {
      "id": "media_detected",
      "name": "Application multimédia détectée",
      "condition": {
        "type": "process",
        "operator": "exists",
        "values": ["vlc.exe", "spotify.exe", "netflix.exe"]
      },
      "actions": [
        {
          "type": "activateMod",
          "value": "media"
        }
      ],
      "priority": 75,
      "enabled": true
    },
    {
      "id": "inactivity",
      "name": "Inactivité détectée",
      "condition": {
        "type": "inactivity",
        "operator": "greaterThan",
        "value": 15
      },
      "actions": [
        {
          "type": "dimDisplay",
          "value": 40
        },
        {
          "type": "setBlueLight",
          "value": 70
        }
      ],
      "priority": 30,
      "enabled": true
    }
  ],
  "profiles": [
    {
      "id": "default",
      "name": "Quotidien",
      "rules": ["night_time", "media_detected", "inactivity"],
      "mods": {
        "gaming": false,
        "night": true,
        "media": true,
        "focus": false
      },
      "isDefault": true
    },
    {
      "id": "gaming",
      "name": "Gaming",
      "rules": ["game_detected", "night_time"],
      "mods": {
        "gaming": true,
        "night": true,
        "media": false,
        "focus": false
      },
      "isDefault": false
    },
    {
      "id": "work",
      "name": "Travail",
      "rules": ["inactivity"],
      "mods": {
        "gaming": false,
        "night": false,
        "media": false,
        "focus": true
      },
      "isDefault": false
    }
  ]
}