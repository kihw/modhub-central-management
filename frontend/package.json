{
  "name": "factorio-mod-manager",
  "version": "1.0.0",
  "description": "A comprehensive tool for managing Factorio mods with automation capabilities",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron:start": "electron .",
    "electron:build": "electron-builder",
    "electron:package": "npm run build && npm run electron:build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "zustand": "^4.4.1",
    "react-icons": "^4.11.0",
    "react-toastify": "^9.1.3",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-modal": "^3.16.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "build": {
    "appId": "com.factoriomodmanager.app",
    "productName": "Factorio Mod Manager",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "resources/assets",
      "output": "dist_electron"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}